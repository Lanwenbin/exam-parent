<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nf.exam.dao.UsersDao" >

  <!-- 与系统分隔 -->
  <!-- 2.5查询用户数据Dao（数据持久层） 写SQL 的语句 -->
  <select id="findUserInfo" resultType="com.nf.exam.entity.Users">
		SELECT
			*
		FROM
			users
		ORDER BY
			user_id
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from users
    where user_id = #{userId}
  </delete>

    <select id="findUser" resultType="com.nf.exam.entity.Users">
		SELECT
			user_id,
            user_name,
            user_pass,
            user_phone,
            user_portrait
		FROM
			users
		WHERE
		user_id = #{userId}

  </select>


    <select id="getRoles" resultType="com.nf.exam.entity.Role">
        select r.*
        from role r,
             user_role ur
        where ur.user_id = #{userId}
          and r.id = ur.role_id
    </select>
    <update id="updateRole">
        delete from user_role where user_id = ?
    </update>
    <delete id="deleteRolesByUserId">
        delete from user_role where user_id = #{userId}
    </delete>

    <insert id="insertUserRole">
        insert into user_role (user_id,role_id) values(#{userId},#{roleId})
    </insert>
</mapper>